<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Nita.ToolKit.NAudio.Controls.View">
    <Style TargetType="{x:Type local:Wave}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Wave}">
                    <Canvas
                        x:Name="PART_Canvas"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="white" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>